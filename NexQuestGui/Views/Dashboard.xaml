<Page x:Class="NexQuestGui.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NexQuestGui.Views"
      mc:Ignorable="d" >
    <Grid Background="White">
        <ui:SimpleStackPanel Margin="12" Spacing="24">
            <TextBlock Text="Dashboard" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>

            <Button Content="I am a button" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="I am an accent button" Style="{StaticResource AccentButtonStyle}" />
        </ui:SimpleStackPanel>
    </Grid>
</Page>
